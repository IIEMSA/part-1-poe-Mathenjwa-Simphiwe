@model CLDV6211ASSIGNMENT.Models.Venues

@{
    ViewData["Title"] = "Delete ";
}

<h2>Delete Venue</h2>

<h4>Are you sure you want to delete this venue?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Venue Image" style="max-width: 300px;" />
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

